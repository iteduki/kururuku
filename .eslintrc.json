{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "jquery": true,
    "es6": true
  },

  "rules": {
    "linebreak-style": ["error","windows"],
    "no-use-before-define": ["error", { "functions": false, "classes": false, "variables": false }],
    "no-plusplus": ["error", {"allowForLoopAfterthoughts": true}],
    "comma-dangle": 0
  }
}
